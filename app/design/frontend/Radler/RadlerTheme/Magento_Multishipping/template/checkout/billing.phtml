<script>
    require(['jquery', 'mage/mage'], function(jQuery) {
        var addtocartForm = jQuery('#multishipping-billing-form');

        getData();
        setState();

      jQuery("#checkbox_store_credit").click((e)=>{
          let status=jQuery(e.target).prop("checked");
            if(status){
                setData();
               
            }else{
                deleteData();
               
            }
      })



        addtocartForm.mage('payment', {
            checkoutPrice: <?= (float)$block->getQuoteBaseGrandTotal() ?>
        });

        addtocartForm.mage('validation', {
            errorPlacement: function(error, element) {
                if (element.attr('data-validate') && element.attr('data-validate').indexOf('validate-cc-ukss') >= 0) {
                    element.parents('form').find('[data-validation-msg="validate-cc-ukss"]').html(error);
                } else {
                    element.after(error);
                }
            }
        });

        function getData() {
                   
        var j = JSON.stringify({
                customerId: <?= $customerID=$block->getQuote()->getCustomerId();  ?> 
            });
            jQuery.ajax({
                url: jQuery("#homePath").text() + "/projekty/blm/redler/rest/V1/carts/mine/aw-get-customer-store-credit",
                data: j,
                type: 'GET',
                dataType: 'json',
                cache: false,
                contentType: 'application/json',
                processData: false,
                /** @inheritdoc */
                success: function (res) {
                   // var json = JSON.parse(res);
                    console.info(res);
                    jQuery("#customer_store_credit_balance").append(res.customer_store_credit_balance);
                    jQuery("#store_credit_amount").val(res.customer_store_credit_balance);
                },

                /** @inheritdoc */
                error: function (res) {
                  console.error("error update - productCart.js");
                }
            });
            
        }

        function setState() {
            jQuery.ajax({
                url: jQuery("#homePath").text() + "/projekty/blm/redler/rest/V1/carts/mine/aw-store-credit",
             
                type: 'GET',
                dataType: 'json',
                cache: false,
                contentType: 'application/json',
                processData: false,
                /** @inheritdoc */
                success: function (res) {
                   // var json = JSON.parse(res);
                    console.info(res);
                    if(res==1){
                        jQuery("#checkbox_store_credit").prop("checked",true);
                    }else{
                        jQuery("#checkbox_store_credit").prop("checked",false);

                    }

                },

                /** @inheritdoc */
                error: function (res) {
                  console.error("error update - productCart.js");
                }
            });
        }


        function setData() {
                   
                   var j = JSON.stringify({
                           customerId: <?= $customerID=$block->getQuote()->getCustomerId();  ?> 
                       });
                       jQuery.ajax({
                           url: jQuery("#homePath").text() + "/projekty/blm/redler/rest/V1/carts/mine/apply-aw-store-credit",
                           data: j,
                           type: 'PUT',
                           dataType: 'json',
                           cache: false,
                           contentType: 'application/json',
                           processData: false,
                           /** @inheritdoc */
                           success: function (res) {
                              // var json = JSON.parse(res);
                               console.info(res);
                               location.reload();
                        
                           },
           
                           /** @inheritdoc */
                           error: function (res) {
                             console.error("error update - productCart.js");
                           }
                       });
                       
                   }

                   function deleteData() {
                   
                   var j = JSON.stringify({
                           customerId: <?= $customerID=$block->getQuote()->getCustomerId();  ?> 
                       });
                       jQuery.ajax({
                           url: jQuery("#homePath").text() + "/projekty/blm/redler/rest/V1/carts/mine/remove-aw-store-credit",
                           data: j,
                           type: 'DELETE',
                           dataType: 'json',
                           cache: false,
                           contentType: 'application/json',
                           processData: false,
                           /** @inheritdoc */
                           success: function (res) {
                              // var json = JSON.parse(res);
                               console.info(res);
                               location.reload();
                           
                           },
           
                           /** @inheritdoc */
                           error: function (res) {
                             console.error("error update - productCart.js");
                           }
                       });
                       
                   }

    });
</script>
