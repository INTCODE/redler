<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_register_success">
        <observer name="checkcustomer" instance="Amitshree\Customer\Observer\CheckCustomer" />
    </event>

    <event name="catalog_product_is_salable_after">
		<observer name="product_hide_add_price" instance="Amitshree\Customer\Observer\SalableObserver" />
	</event>
	<event name="sales_quote_product_add_after">
		<observer name="product_hide_add_price" instance="Amitshree\Customer\Observer\QuoteObserver" />
	</event>
	<event name="catalog_product_collection_load_after">
		<observer name="product_hide_add_price" instance="Amitshree\Customer\Observer\CollectionObserver" />
	</event>
	<event name="catalog_product_load_after">
		<observer name="product_hide_add_price" instance="Amitshree\Customer\Observer\ProductObserver" />
	</event>
</config>